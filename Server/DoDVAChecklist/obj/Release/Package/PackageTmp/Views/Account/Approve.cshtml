@using DoDVAChecklist.ViewModels
@model PendingUserViewModel
@section featured {
    <section class="featured">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>Approve acount...</h1>
            </hgroup>
        </div>
    </section>
}

<h2>Are you sure you want to approve the following user?</h2>

<p>@Model.LastName, @Model.FirstName (@Model.UserName)</p>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Approve" /> |
        @Html.ActionLink("Cancel", "Index", new { controller="Home" })
    </p>
}
